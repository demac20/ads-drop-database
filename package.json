{
	"name": "ads-drop-database",
	"displayName": "ADS Drop Database",
	"description": "Add a Drop Database option to the Right-Click context menu on a database",
	"publisher": "DMC_Systems",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.39.0",
		"azdata": "*"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ads-drop-database.dropdatabase"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ads-drop-database.dropdatabase",
				"title": "Drop Database"
			}
		],
		"menus": {
            "objectExplorer/item/context": [
                {
                    "command": "ads-drop-database.dropdatabase",
                    "when": "connectionProvider == MSSQL && nodeType == Database",
					"group": "data"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"proposedapi": "node installTypings.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.39.0",
		"@types/azdata": "*",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
